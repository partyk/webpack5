{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "classic",
    "strict": true,
    "removeComments": true,
    "sourceMap": true,
    "paths": {
      "@ui/*": ["./app/ui/*"],
      "@js/*": ["./app/ui/js/*"],
      "@less/*": ["./app/ui/less/*"],
      "@scss/*": ["./app/ui/scss/*"],
      "@images/*": ["./app/ui/images/*"]
    }
  }
}
