{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "classic",
    "strict": true,
    "removeComments": true,
    "sourceMap": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@js/*": ["./src/js/*"],
      "@scss/*": ["./src/scss/*"],
      "@images/*": ["./src/images/*"]
    }
  }
}
